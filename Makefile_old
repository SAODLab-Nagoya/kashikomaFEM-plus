TARGET = kashikoma

OBJECTS = main.o pre_process.o post_process.o solver.o

#CC = gcc
#CC = icc
CC = mpicc

CFLAGS = -g
#CFLAGS = -fopenmp -O3
#CFLAGS = -qopenmp -O3

#LFLAGS = -fopenmp -lm
#LFLAGS = -qopenmp -lm

$(TARGET) : $(OBJECTS)
	$(CC) -o $(TARGET) $(OBJECTS) $(LFLAGS)
	@echo "Make completed."

.SUFFIXES : .o .c
.c.o:
	${CC} $(FFLAGS) -c $<

clean:
	$(RM) $(TARGET) *.o

main.o         : func_header.h
pre_process.o  : func_header.h
post_process.o : func_header.h
solver.o       : func_header.h
